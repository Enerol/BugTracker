<div id="topContent">
  <h1>Sign in</h1>
</div>

<div id="midleContent">
  <%= form_for(:session, :url => sessions_path) do |f| %>
    <div class="field">
      <%= f.label :username %><br />
      <%= f.text_field :username %>
    </div>
    <div class="field">
      <%= f.label :password %><br />
      <%= f.password_field :password %>
    </div>
    <div class="actions">
      <%= f.submit "Sign in" %>
    </div>
  <% end %>
</div>

<div id="bottomContent">

</div>
