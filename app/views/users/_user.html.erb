<li class="trBody trUser">
  <div class="tdBodyOut"><input type="checkbox" /></div>
  <span class="tdBody userInfos">
    <span class="userName string"><%= link_to user.username, user %></span>
    <span class="userMail email"> <%= link_to user.email, "mailto:"+user.email %></span>
  </span>
  <span class="tdBody userActions actions">
    <%= link_to "Delete", user, :confirm => "Are you sure ?", :method => :delete, :class => "delete objectAction" %>
    <%= link_to "Edit", edit_user_path(user), :class => "edit objectAction" %>
  </span>
</li>